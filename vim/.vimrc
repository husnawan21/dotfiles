" set nocompatible
syntax on
filetype on
set noswapfile
"turn on numbering
set number
set relativenumber
set expandtab
set shiftwidth=2
set autoindent


" Use the below highlight group when displaying bad whitespace is desired.
highlight BadWhitespace ctermbg=red guibg=red

" Set the default file encoding to UTF-8:
set encoding=utf-8

"use space to open folds
nnoremap <space> za 

" keybindings:
imap jj <Esc>

